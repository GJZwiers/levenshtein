{
  "name": "lshtein",
  "version": "1.1.0",
  "description": "Wagner-Fischer implementation of the Levenshtein algorithm for string comparison",
  "type": "module",
  "files": [
    "lib/**/*",
    "types/**/*"
  ],
  "exports": {
    ".": {
      "require": "./lib/commonjs/index.js",
      "default": "./lib/esm/index.js"
    }
  },
  "module": "./lib/esm/index.js",
  "main": "./lib/commonjs/index.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "prepare": "tsc -p lib/commonjs && tsc -p lib/esm && tsc -p types",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "levenshtein",
    "wagner-fischer",
    "node",
    "typescript",
    "javascript"
  ],
  "author": "Geert-Jan Zwiers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GJZwiers/levenshtein.git"
  },
  "devDependencies": {
    "typescript": "^3.8.3"
  }
}
